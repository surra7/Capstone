<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".account.InformationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/top_bar">

        <TextView
            android:id="@+id/editInformation"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Member Information"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/divisionUnderEditInformation"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/gray2"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/edit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/white"
            android:text="Edit"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textView242"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Passport"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/toolbar_division241"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_below="@+id/my_toolbar"
            android:layout_gravity="center"
            android:background="@color/gray2"
            android:orientation="horizontal" />


        <ImageButton
            android:id="@+id/passportCamera_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:scaleType="center"
            android:src="@drawable/ic_add_pic">
        </ImageButton>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <EditText
                    android:id="@+id/keyStringCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type key letters for passport info" />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/show_p_info_btn"
                android:layout_width="70dp"
                android:layout_height="55dp"
                android:background="@color/white"
                android:text="Done"
                android:textSize="10dp"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Type"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/type">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Country Code"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/countryCode">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Passport No."
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/passportNo">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Surname"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/surname">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Given Name"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/givenName">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Sex"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/sex">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Date of Birth"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/dateOfBirth">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Date of Issue"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/dateOfIssue">
            </TextView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Date of Expiry"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/dateOfExpiry">
            </TextView>

        </LinearLayout>


        <TextView
            android:id="@+id/textView24"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Files"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/toolbar_divisione41"
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:layout_below="@+id/my_toolbar"
            android:layout_gravity="center"
            android:background="@color/gray2"
            android:orientation="horizontal">

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="upload"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/file_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_file" />

            </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>