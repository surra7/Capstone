<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".myTravel.AddActivity2">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_register_travel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register your itinerary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_register_travel"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/title_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/gray2"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <TextView
        android:id="@+id/tv_start"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:padding="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/title_edit"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/startDate_btn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="Start date"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:background="@drawable/search_bar"
        app:layout_constraintTop_toBottomOf="@id/title_edit"
        app:layout_constraintStart_toEndOf="@id/tv_start"/>

    <TextView
        android:id="@+id/tv_End"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="End"
        android:padding="20dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_start"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/endDate_btn"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:text="End date"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:background="@drawable/search_bar"
        app:layout_constraintTop_toBottomOf="@id/startDate_btn"
        app:layout_constraintStart_toEndOf="@id/tv_End"/>

