<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_select_travel_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What kind of trip do you do"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_who"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="With Whom"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_select_travel_style"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/select_who_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_who"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_alone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alone"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_couple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Couple"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_who_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/select_who_1"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_kids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kids"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_parents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parents"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_etc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etc"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/style_division"
        android:background="@color/gray2"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/select_who_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"></LinearLayout>

    <TextView
        android:id="@+id/tv_travel_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Travel Style"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/style_division"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/select_style_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_travel_style"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activities"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_sns_Hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SNS Hot Place"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_style_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/select_style_1"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_food_tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food Tour"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_tourist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tourist Attraction"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_style_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/select_style_2"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_healing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healing"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_scenery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scenery"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_style_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/select_style_3"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_culture_art"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Culture / Art / History"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/select_etc_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etc"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:padding="6dp"
            android:paddingStart="22dp"
            android:paddingEnd="22dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:background="@drawable/selector_button"
            android:textColor="@color/selector_txt_color" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/select_style_4"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Skip >"
        android:textSize="20sp"
        android:textColor="@color/purple_1"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"/>

    <Button
        android:id="@+id/apply_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@id/tv_skip"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="Apply"
        android:textSize="18sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>